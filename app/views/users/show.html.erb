<h1 align="center"> <%= @user.full_name %></h1>

<div class="profile-img">
	<% if @user.avatar.present? %>
	<%= image_tag @user.avatar.url(:medium), class: 'circle responsive-img' %>
	<% else %>
		<p>No profile image. <%= link_to " Add one!", edit_user_registration_path %></p>
	<% end %>
</div>

<div id="tabs_wrapper">
	<div class="row">
	  <div class="col s12">
	    <ul class="tabs">
	      <li class="tab col s6"><a class="active" href="#my_posts">My Posts</a></li>
	      <li class="tab col s6"><a href="#my_workouts">My Workouts</a></li>
	    </ul>
	  </div>
	  <div id="my_posts" class="col s12">
	  	<% @user.posts.reverse.each do |post| %>
	  		<%= render post, post_class: "profile_post" %>
	  	<% end %>
	  </div>
	  <div id="my_workouts" class="col s12">
	  	<div id="profile_workout_selector_buttons" class="center-align">
				<%= link_to 'Create New Workout', new_workout_path, :class => "btn btn-default btn-lg" %>
			</div>
			<% @user.workout_creations.reverse.each do |workout| %>
				<ul class="collection">
					<li>
						<%= link_to workout.name, workout %>
					</li>
				</ul>
			<% end %>
	  </div>
	</div>
</div>

<div id="profile_links">
	<%= link_to 'Edit Profile', edit_user_registration_path, class: 'link-to-text-color' %>
	<br>
	<%= link_to 'Delete Profile', user_registration_path, data: {:confirm => "Really? You don't like us anymore?"}, :method => :delete, class: 'link-to-text-color' %>
</div>



