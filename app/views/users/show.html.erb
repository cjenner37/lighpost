<h1 align="center"> <%= @user.first_name %>'s Profile</h1>

<div id="profile_links">
	<%= link_to 'Edit Profile', edit_user_registration_path, class: 'link-to-text-color' %>
	<br>
	<%= link_to 'Delete Profile', user_registration_path, data: {:confirm => "Really? You don't like us anymore?"}, :method => :delete, class: 'link-to-text-color' %>
</div>

<div id="tabs_wrapper">
	<div class="row">
	  <div class="col s12">
	    <ul class="tabs">
	      <li class="tab col s6"><a class="active" href="#my_posts">My Posts</a></li>
	      <li class="tab col s6"><a href="#my_workouts">My Workouts</a></li>
	    </ul>
	  </div>
	  <div id="my_posts" class="col s12">
	  	<% @user.posts.reverse.each do |post| %>
	  		<%= render post, post_class: "profile_post" %>
	  	<% end %>
	  </div>
	  <div id="my_workouts" class="col s12">Workouts</div>
	</div>
</div>

