<h1 align="center">Profile Page of <%= @user.first_name %></h1>

<div id="tabs_wrapper">
	<div class="row">
	  <div class="col s12">
	    <ul class="tabs">
	      <li class="tab col s3"><a href="#test1">My Posts</a></li>
	      <li class="tab col s3"><a class="active" href="#test2">My Workouts</a></li>
	    </ul>
	  </div>
	  <div id="test1" class="col s12"><% @user.posts.each do |post| %>
	  	<%= render post %>
	  	<% end %></div>
	  <div id="test2" class="col s12">Workouts</div>
	</div>
</div>


<div id="profile_links">
	<%= link_to 'Edit Profile', edit_user_registration_path, class: 'link-to-text-color' %>
	<br>
	<%= link_to 'Delete Profile', user_registration_path, data: {:confirm => "Really? You don't like us anymore?"}, :method => :delete, class: 'link-to-text-color' %>
</div>
